<div class="card col-sm-5 mx-auto mt-5">
  <div class="card-body">
    <h2 class ="mt-1 mb-3">Log in</h2>

    <div class="login-flash-message">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),id: 'new-session-user', class: 'new-session-user') do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="form-group">
        <%= f.label :email, "Eメール", class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class:"form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group ml-4">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "ログインしたままにする", class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "mt-5 btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="mt-2">
    新規登録がお済みでない方はこちら
      <%= link_to "Sign up", new_user_registration_path %>
    </div>
    <div>
    パスワードをお忘れの方はこちら
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  </div>
</div>
