

<div class="card col-sm-6 mx-auto mt-5">
  <div class="card-body">
    <h3 class="mt-1 mb-5">Sign up</h3>

    <div class="signin-flash-message">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
   
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),class:"form-registration mb-2") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="from-group mb-4">
          <%= f.label :nickname, "ニックネーム", class: "form-label"%><em>(20文字まで）</em><br />
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control ", maxlength: "20" %>
        </div>

        <div class="from-group mb-4">
          <%= f.label :email, "Eメール", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="from-group mb-4">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字より多く)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "※半角で英語と数字を含めてください", class: "form-control" %>
        </div>

        <div class="from-group mb-4">
          <%= f.label :password_confirmation, "確認用パスワード", class: "form-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "mt-5 btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="mt-2">
        すでにアカウントをお持ちの方はこちら
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
