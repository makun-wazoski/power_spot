<%=render partial: 'posts/header' %>

<div id="container">
  <div class="user-container-show">
    <h3 class="user-prof-show">
      <%= @user.nickname%>
      <hr class="user-show-hr">
    </h3>
    <%if @user.image.attached?%>
      <%=image_tag @user.image, size:"200", class: "user-iocon" %>
    <% else %>
      <%= image_tag "account_def.png", alt:"user-icon", size: "200", class:"user-icon"%>
    <% end %>
    <ul class="user-detail-show">
      <li class="user-favorit-spot">
      お気に入りスポット
      </li>
      <%=@user.favorite_spot%>
      <li class="user-introducition">
      紹介文
      </li>
      <%=@user.introduction%>
    </ul>

    <div class="edit-prof-show">
      <% if user_signed_in? && current_user.id == @user.id %>
      <%= link_to "プロフィールを編集", edit_user_path(current_user.id), method: :get %>
      <% end %>
    </div>
    
      <p><%= @nickname %>さんの投稿一覧</p>
      <div class="my-posts">
      
        <% @posts.each do |post| %>
          <ul class='mypost-lists'>
            <li class="list">
              <%= link_to post_path(post.id), method: :get do %>
                <div class='post-img-content'>
                  <%= image_tag post.image, class: 'post-img' if post.image.attached?%>
                </div>
                <div class='post-info'>
                  <h3 class='post-name'>
                    <%= post.name %>
                  </h3>
                </div>
              <% post.tag_list.each do |tag| %>
                <span class="label label-primary">
                  <%= link_to tag, '#', class: "badge badge-light mr-1 p-2" %>
                </span>
              <% end %>
              <%end%>
            </li>
          </ul>
        <%end%>
      </div>
  </div>
</div>
<%= render partial: 'posts/footer'%>